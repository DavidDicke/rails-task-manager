<h2>My tasks</h2>
<ul>
  <% @tasks.each do |task| %>
    <li><%= check_box "task", "completed", {}, "1", "0" %><%= link_to task.title, task_path(task) %><%= link_to "🗑️", task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this task?"} %></li>
  <% end %>
</ul>
<div>
  <p><%= link_to "➕Add a new Task", tasks_new_path%></p>
</div>
